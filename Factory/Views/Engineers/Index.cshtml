@{
  Layout = "_Layout";
}

@model List<Factory.Models.Engineer>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="breadcrumb-item active" aria-current="page">Engineers</li>
  </ol>
</nav>

<h1>Engineers</h1>

@if(@Model.Count == 0)
{
  <p>There are no engineers.</p>
}
else
{
  <ul>
    @foreach (var engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new engineer", "Create")</p>
