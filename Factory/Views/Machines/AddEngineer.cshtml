@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add Engineer</h1>
<hr/>
<h4>Add an engineer to this machine: @Html.DisplayFor(model => model.Name)</h4>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Add"/>
}

<p>@Html.ActionLink("Back to machine details", "Details", new { id = Model.MachineId})</p>
<p>@Html.ActionLink("Back to machine list", "Index")</p>