@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="breadcrumb-item active" aria-current="page">Machines</li>
  </ol>
</nav>

<h1>Machines</h1>
<hr/>

@if(@Model.Count == 0)
{
  <p>There are no machines.</p>
}
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new machine", "Create")</p>